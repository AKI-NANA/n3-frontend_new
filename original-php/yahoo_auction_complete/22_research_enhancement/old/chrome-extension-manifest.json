{
  "manifest_version": 3,
  "name": "総合リサーチツール - eBay×国内EC統合",
  "version": "1.0.0",
  "description": "eBayと国内ECサイトを統合したリサーチツール。リアルタイム利益計算、仕入先検索、自動分析機能",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "background"
  ],
  
  "host_permissions": [
    "https://www.ebay.com/*",
    "https://www.amazon.co.jp/*",
    "https://item.rakuten.co.jp/*",
    "https://jp.mercari.com/*",
    "https://shopping.yahoo.co.jp/*",
    "https://auctions.yahoo.co.jp/*",
    "http://localhost:3000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.ebay.com/*"],
      "js": ["content-scripts/ebay.js"],
      "css": ["styles/ebay.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.amazon.co.jp/*"],
      "js": ["content-scripts/amazon.js"],
      "css": ["styles/amazon.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://item.rakuten.co.jp/*"],
      "js": ["content-scripts/rakuten.js"],
      "css": ["styles/rakuten.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://jp.mercari.com/*"],
      "js": ["content-scripts/mercari.js"],
      "css": ["styles/mercari.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "リサーチツール",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "styles/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}