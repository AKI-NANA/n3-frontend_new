{
  "module_name": "kicho",
  "version": "1.0.0",
  "hooks_engine": "kicho_hooks_engine.js",
  "integration_mode": "existing_ui_controller",
  "ui_patterns": {
    "delete_animation": {
      "duration": "300ms",
      "easing": "ease-out",
      "css_class": "kicho__delete-animation",
      "background_color": "#ffebee",
      "opacity": 0.5,
      "transform": "translateX(-20px)"
    },
    "add_animation": {
      "duration": "400ms", 
      "easing": "ease-in",
      "css_class": "kicho__add-animation",
      "background_color": "#e8f5e8",
      "opacity": 0,
      "transform": "translateY(-20px)"
    },
    "loading_animation": {
      "duration": "infinite",
      "css_class": "kicho__loading-spinner",
      "overlay": true,
      "message": "処理中..."
    },
    "ai_learning_complete": {
      "duration": "500ms",
      "css_class": "kicho__ai-success",
      "clear_input": true,
      "show_results": true,
      "update_history": true
    }
  },
  "error_handling": {
    "notification_type": "toast",
    "position": "top-right",
    "duration": 5000,
    "retry_enabled": true,
    "max_retries": 3,
    "retry_delay": 1000,
    "fallback_mode": true
  },
  "mf_integration": {
    "backup_before_send": true,
    "approval_required": true,
    "dry_run_mode": false,
    "confirmation_dialog": true,
    "progress_tracking": true
  },
  "actions": {
    "delete-data-item": {
      "ui_update": "delete_animation",
      "success_message": "データを削除しました",
      "error_retry": true,
      "backup_required": false,
      "confirmation": false,
      "target_selector": "[data-item-id]",
      "counter_update": -1
    },
    "execute-mf-import": {
      "ui_update": "loading_animation",
      "success_message": "MFデータを取得しました",
      "backup_before": true,
      "approval_flow": false,
      "confirmation": true,
      "progress_tracking": true,
      "estimate_duration": 30000
    },
    "execute-integrated-ai-learning": {
      "ui_update": "ai_learning_complete",
      "success_message": "AI学習が完了しました",
      "clear_input": "#aiTextInput",
      "show_results": true,
      "update_history": true,
      "validation_required": true,
      "min_text_length": 10
    },
    "bulk-approve-transactions": {
      "ui_update": "loading_animation",
      "success_message": "取引を一括承認しました",
      "confirmation": true,
      "backup_before": true,
      "batch_processing": true,
      "progress_tracking": true
    },
    "download-rules-csv": {
      "ui_update": "loading_animation",
      "success_message": "ルールCSVをダウンロードしました",
      "file_download": true,
      "progress_tracking": false,
      "estimate_duration": 5000
    },
    "download-pending-csv": {
      "ui_update": "loading_animation", 
      "success_message": "承認待ちCSVをダウンロードしました",
      "file_download": true,
      "progress_tracking": false,
      "estimate_duration": 5000
    },
    "save-uploaded-rules-as-database": {
      "ui_update": "loading_animation",
      "success_message": "ルールをデータベースに保存しました",
      "backup_before": true,
      "validation_required": true,
      "progress_tracking": true,
      "estimate_duration": 15000
    },
    "select-all-imported-data": {
      "ui_update": "highlight_animation",
      "success_message": "全データを選択しました",
      "checkbox_update": true,
      "counter_update": "selection"
    },
    "refresh-all": {
      "ui_update": "loading_animation",
      "success_message": "データを更新しました",
      "page_reload": false,
      "statistics_update": true,
      "estimate_duration": 3000
    },
    "process-csv-upload": {
      "ui_update": "loading_animation",
      "success_message": "CSVファイルを処理しました",
      "file_validation": true,
      "progress_tracking": true,
      "estimate_duration": 20000
    },
    "execute-full-backup": {
      "ui_update": "loading_animation",
      "success_message": "バックアップを作成しました",
      "confirmation": true,
      "progress_tracking": true,
      "estimate_duration": 45000
    },
    "health-check": {
      "ui_update": false,
      "success_message": false,
      "silent": true,
      "validation_only": true
    }
  },
  "ui_selectors": {
    "notification_container": "#notification-container",
    "loading_overlay": ".kicho__loading-overlay",
    "modal_container": ".kicho__modal-container",
    "statistics_container": "[data-statistics]",
    "ai_results_container": "#ai-results-container",
    "ai_history_container": "#aiSessionList"
  },
  "integration_settings": {
    "use_existing_ui_controller": true,
    "use_existing_ajax_manager": true,
    "preserve_existing_events": true,
    "namespace": "NAGANO3_KICHO",
    "compatibility_mode": "enhanced"
  }
}