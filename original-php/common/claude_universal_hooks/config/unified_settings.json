{
  "database": {
    "type": "postgresql",
    "host": "localhost",
    "port": 5432,
    "database": "nagano3_db",
    "connection_pool": {
      "min_connections": 1,
      "max_connections": 10,
      "timeout": 30
    },
    "alternatives": {
      "mysql": {
        "type": "mysql",
        "host": "localhost",
        "port": 3306,
        "database": "nagano3_db",
        "charset": "utf8mb4"
      }
    }
  },
  "authentication": {
    "method": "jwt_with_session_fallback",
    "jwt": {
      "algorithm": "HS256",
      "expiration": 3600,
      "refresh_enabled": true,
      "refresh_expiration": 86400
    },
    "session": {
      "secure": true,
      "httponly": true,
      "samesite": "strict",
      "max_age": 3600
    }
  },
  "api": {
    "response_format": "unified_json",
    "required_fields": ["status", "message", "data", "timestamp"],
    "versioning": "path_based",
    "error_codes": {
      "VALIDATION_ERROR": "入力値検証エラー",
      "AUTHENTICATION_REQUIRED": "認証が必要",
      "AUTHORIZATION_FAILED": "認可失敗",
      "RESOURCE_NOT_FOUND": "リソースが見つからない",
      "DUPLICATE_RESOURCE": "重複リソース",
      "EXTERNAL_API_ERROR": "外部API連携エラー",
      "DATABASE_ERROR": "データベースエラー",
      "INTERNAL_SERVER_ERROR": "内部サーバーエラー"
    }
  },
  "hooks": {
    "unified_system": {
      "enabled": true,
      "data_structure": "UnifiedHookDefinition",
      "priority_levels": ["critical", "high", "medium", "low"],
      "phase_format": "phase_{number}",
      "naming_convention": "snake_case"
    },
    "migration": {
      "backup_enabled": true,
      "validation_enabled": true,
      "auto_fix_enabled": true
    }
  },
  "system": {
    "version": "1.0.0",
    "last_updated": "2025-01-15T12:00:00Z",
    "unified_migration_completed": true
  }
}
