{
  "module_name": "kicho",
  "version": "1.0.0",
  "hooks_engine": "kicho_hooks_engine.js",
  "ui_patterns": {
    "delete_animation": {
      "duration": "300ms",
      "easing": "ease-out",
      "css_class": "kicho__delete-animation"
    },
    "add_animation": {
      "duration": "400ms", 
      "easing": "ease-in",
      "css_class": "kicho__add-animation"
    },
    "loading_animation": {
      "duration": "infinite",
      "css_class": "kicho__loading-spinner"
    },
    "ai_learning_complete": {
      "duration": "500ms",
      "easing": "ease-out",
      "css_class": "kicho__ai-complete-animation"
    },
    "mf_sync_animation": {
      "duration": "800ms",
      "easing": "ease-in-out",
      "css_class": "kicho__mf-sync-animation"
    }
  },
  "error_handling": {
    "notification_type": "toast",
    "position": "top-right",
    "duration": 5000,
    "retry_enabled": true,
    "max_retries": 3,
    "retry_delay": 1000
  },
  "mf_integration": {
    "backup_before_send": true,
    "approval_required": true,
    "dry_run_mode": false,
    "confirmation_required": true
  },
  "ai_learning": {
    "show_progress": true,
    "clear_input_on_success": true,
    "show_results_modal": true,
    "auto_refresh_stats": true
  },
  "actions": {
    "delete-data-item": {
      "ui_update": "delete_animation",
      "success_message": "データを削除しました",
      "error_retry": true,
      "backup_required": true,
      "confirmation": "削除してもよろしいですか？"
    },
    "execute-integrated-ai-learning": {
      "ui_update": "ai_learning_complete",
      "success_message": "AI学習が完了しました",
      "clear_input": "#aiTextInput",
      "show_results": true,
      "refresh_stats": true
    },
    "execute-mf-import": {
      "ui_update": "mf_sync_animation",
      "success_message": "MFデータを取得しました",
      "backup_before": true,
      "approval_flow": true,
      "confirmation": "MFクラウドからデータを取得します。よろしいですか？"
    },
    "bulk-approve-transactions": {
      "ui_update": "loading_animation",
      "success_message": "取引を一括承認しました",
      "backup_before": true,
      "confirmation": "選択した取引をすべて承認します。よろしいですか？"
    },
    "download-rules-csv": {
      "ui_update": null,
      "success_message": "ルールCSVをダウンロードしました",
      "trigger_download": true
    },
    "save-uploaded-rules-as-database": {
      "ui_update": "add_animation",
      "success_message": "ルールをデータベースに保存しました",
      "backup_before": true,
      "refresh_list": "#rules-list"
    },
    "download-pending-csv": {
      "ui_update": null,
      "success_message": "承認待ちCSVをダウンロードしました",
      "trigger_download": true
    },
    "select-all-imported-data": {
      "ui_update": null,
      "success_message": "すべてのデータを選択しました",
      "visual_feedback": true
    },
    "refresh-all": {
      "ui_update": "loading_animation",
      "success_message": "画面を更新しました",
      "page_reload": false,
      "ajax_refresh": true
    },
    "process-csv-upload": {
      "ui_update": "loading_animation",
      "success_message": "CSVファイルを処理しました",
      "show_progress": true,
      "validate_before": true
    },
    "execute-full-backup": {
      "ui_update": "loading_animation",
      "success_message": "バックアップを作成しました",
      "confirmation": "フルバックアップを実行します。時間がかかる場合があります。"
    },
    "export-to-mf": {
      "ui_update": "mf_sync_animation",
      "success_message": "MFクラウドに送信しました",
      "backup_before": true,
      "approval_flow": true,
      "confirmation": "データをMFクラウドに送信します。よろしいですか？"
    },
    "toggle-auto-refresh": {
      "ui_update": null,
      "success_message": "自動更新の設定を変更しました",
      "visual_feedback": true,
      "toggle_indicator": "#auto-refresh-status"
    },
    "health-check": {
      "ui_update": "loading_animation",
      "success_message": "システムヘルスチェックが完了しました",
      "show_results": true
    },
    "show-import-history": {
      "ui_update": null,
      "modal_content": "#import-history-modal",
      "load_data": "import_history"
    },
    "show-ai-learning-history": {
      "ui_update": null,
      "modal_content": "#ai-history-modal",
      "load_data": "ai_learning_history"
    },
    "create-new-rule": {
      "ui_update": "add_animation",
      "success_message": "新しいルールを作成しました",
      "clear_form": "#rule-form",
      "refresh_list": "#rules-list"
    },
    "edit-saved-rule": {
      "ui_update": null,
      "success_message": "ルールを更新しました",
      "refresh_list": "#rules-list"
    },
    "delete-saved-rule": {
      "ui_update": "delete_animation",
      "success_message": "ルールを削除しました",
      "confirmation": "このルールを削除してもよろしいですか？",
      "refresh_list": "#rules-list"
    },
    "view-transaction-details": {
      "ui_update": null,
      "modal_content": "#transaction-details-modal",
      "load_data": "transaction_details"
    },
    "generate-advanced-report": {
      "ui_update": "loading_animation",
      "success_message": "レポートを生成しました",
      "trigger_download": true
    },
    "get-ai-status": {
      "ui_update": null,
      "update_element": "#ai-status-indicator",
      "refresh_stats": true
    }
  },
  "css_animations": {
    ".kicho__delete-animation": {
      "transform": "scale(0)",
      "opacity": "0",
      "transition": "all 0.3s ease-out"
    },
    ".kicho__add-animation": {
      "transform": "scale(1)",
      "opacity": "1",
      "transition": "all 0.4s ease-in"
    },
    ".kicho__loading-spinner": {
      "animation": "spin 1s linear infinite"
    },
    ".kicho__ai-complete-animation": {
      "background": "linear-gradient(45deg, #4CAF50, #81C784)",
      "transition": "all 0.5s ease-out"
    },
    ".kicho__mf-sync-animation": {
      "background": "linear-gradient(45deg, #2196F3, #64B5F6)",
      "transition": "all 0.8s ease-in-out"
    }
  },
  "toast_templates": {
    "success": {
      "class": "toast-success",
      "icon": "✅",
      "duration": 3000
    },
    "error": {
      "class": "toast-error", 
      "icon": "❌",
      "duration": 5000
    },
    "warning": {
      "class": "toast-warning",
      "icon": "⚠️", 
      "duration": 4000
    },
    "info": {
      "class": "toast-info",
      "icon": "ℹ️",
      "duration": 3000
    }
  }
}