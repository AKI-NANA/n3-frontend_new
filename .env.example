# ===== eBay API認証情報 =====
# MJTアカウント
EBAY_MJT_CLIENT_ID=your_mjt_client_id_here
EBAY_MJT_CLIENT_SECRET=your_mjt_client_secret_here
EBAY_MJT_REFRESH_TOKEN=your_mjt_refresh_token_here

# GREENアカウント
EBAY_GREEN_CLIENT_ID=your_green_client_id_here
EBAY_GREEN_CLIENT_SECRET=your_green_client_secret_here
EBAY_GREEN_REFRESH_TOKEN=your_green_refresh_token_here

# eBay API環境（production または sandbox）
EBAY_ENVIRONMENT=production

# ===== Supabase設定 =====
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===== アプリケーション設定 =====
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NODE_ENV=development

# ===== 為替レート設定 =====
# JPY/USDの為替レート（デフォルト値、動的取得も可能）
DEFAULT_EXCHANGE_RATE=150

# ===== eBay FVF設定 =====
# eBay Final Value Fee率（デフォルト13.19%）
DEFAULT_FVF_RATE=0.1319

# ===== DDP計算設定 =====
# DDP固定手数料（USD）
DDP_SERVICE_FEE=15

# MPF率（Merchandise Processing Fee）
MPF_RATE=0.003464

# ===== 配送ポリシー設定 =====
# 自動選定時の価格マージン（±10%）
SHIPPING_POLICY_PRICE_MARGIN=0.1

# ===== バリエーション作成設定 =====
# DDPコスト差の許容範囲（USD）
MAX_DDP_COST_DIFFERENCE_USD=20

# DDPコスト差の許容範囲（パーセント）
MAX_DDP_COST_DIFFERENCE_PERCENT=0.10

# 重量差の許容比率（最大/最小）
MAX_WEIGHT_RATIO=1.5

# ===== ログ設定 =====
# ログレベル（debug, info, warn, error）
LOG_LEVEL=info

# ===== セキュリティ設定 =====
# CORS許可オリジン（カンマ区切りで複数指定可能）
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===== データベーステーブル名 =====
# （通常は変更不要、マイグレーション後は自動的に使用される）
SHIPPING_POLICIES_TABLE=ebay_shipping_policies_final
INVENTORY_MASTER_TABLE=inventory_master
PRODUCTS_MASTER_TABLE=products_master
HTS_CODES_TABLE=hts_codes
COUNTRY_TARIFFS_TABLE=country_additional_tariffs
USA_DDP_RATES_TABLE=usa_ddp_rates
EBAY_TOKENS_TABLE=ebay_tokens
